{
    "name": "islamwiki/framework",
    "description": "Unified Islamic ecosystem with wiki, social networking, learning management, and comprehensive admin systems",
    "type": "project",
    "license": "AGPL-3.0",
    "version": "0.0.1",
    "authors": [
        {
            "name": "Khalid Abdullah",
            "email": "khalid@islamwiki.org"
        }
    ],
    "require": {
        "php": "^8.2",
        "firebase/php-jwt": "^6.8",
        "league/oauth2-client": "^2.7",
        "monolog/monolog": "^3.4",
        "vlucas/phpdotenv": "^5.5",
        "symfony/http-foundation": "^6.3",
        "symfony/routing": "^6.3",
        "symfony/console": "^6.3",
        "doctrine/dbal": "^3.6",
        "doctrine/orm": "^2.16",
        "twig/twig": "^3.7",
        "intervention/image": "^2.7",
        "phpmailer/phpmailer": "^6.8",
        "guzzlehttp/guzzle": "^7.8",
        "ramsey/uuid": "^4.7",
        "paragonie/sodium_compat": "^1.19"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/var-dumper": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "IslamWiki\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IslamWiki\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "test": "phpunit",
        "cs": "phpcs --standard=PSR12 src/",
        "stan": "phpstan analyse src/"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 