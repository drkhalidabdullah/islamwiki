        gap: 0.5rem;
        align-items: center;
    }
    
    .pagination .btn {
        width: 100%;
        max-width: 200px;
    }
    
    /* Alert mobile styles */
    .alert {
        margin: 1rem;
        padding: 1rem;
        border-radius: 6px;
    }
    
    /* Button mobile styles */
    .btn {
        padding: 0.75rem 1rem;
        font-size: 1rem;
        min-height: 44px; /* iOS touch target minimum */
    }
    
    .btn-sm {
        padding: 0.5rem 0.75rem;
        font-size: 0.9rem;
        min-height: 36px;
    }
    
    /* Form mobile styles */
    .form {
        gap: 1rem;
    }
    
    .form-row {
        grid-template-columns: 1fr;
        gap: 1rem;
    }
    
    /* Card mobile styles */
    .card {
        padding: 1rem;
        margin-bottom: 1rem;
    }
    
    .card h2 {
        font-size: 1.3rem;
        margin-bottom: 1rem;
    }
    
    /* Dropdown mobile styles */
    .dropdown-menu {
        position: static;
        display: none;
        width: 100%;
        box-shadow: none;
        border: 1px solid #e9ecef;
        border-radius: 4px;
        margin-top: 0.5rem;
    }
    
    .dropdown-menu.show {
        display: block;
    }
    
    .dropdown-item {
        padding: 0.75rem 1rem;
        border-bottom: 1px solid #e9ecef;
    }
    
    .dropdown-item:last-child {
        border-bottom: none;
    }
    
    /* Touch-friendly improvements */
    .sidebar-item {
        min-height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .sidebar-item i {
        font-size: 1.2rem;
    }
    
    /* Prevent zoom on input focus (iOS) */
    input[type="text"],
    input[type="email"],
    input[type="password"],
    input[type="search"],
    textarea,
    select {
        font-size: 16px;
    }
    
    /* Improve touch targets */
    a, button, input, select, textarea {
        min-height: 44px;
        min-width: 44px;
    }
    
    /* Hide desktop-only elements */
    .desktop-only {
        display: none !important;
    }
    
    /* Show mobile-only elements */
    .mobile-only {
        display: block !important;
    }
}

