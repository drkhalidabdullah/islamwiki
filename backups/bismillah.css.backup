/* === public/assets/css/wiki-article-styling.css === */
/* Wiki Article Styling - Matching Search Page Design */

/* CSS Variables for consistent theming */
:root {
    --primary-color: #2563eb;
    --primary-dark: #1d4ed8;
    --primary-light: #3b82f6;
    --secondary-color: #059669;
    --accent-color: #f59e0b;
    --text-primary: #1f2937;
    --text-secondary: #6b7280;
    --text-muted: #9ca3af;
    --bg-primary: #ffffff;
    --bg-secondary: #f9fafb;
    --bg-tertiary: #f3f4f6;
    --border-color: #e5e7eb;
    --border-light: #f3f4f6;
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    --radius-sm: 0.375rem;
    --radius-md: 0.5rem;
    --radius-lg: 0.75rem;
    --radius-xl: 1rem;
}

/* Main Article Page Container */
.article-page {
    min-height: calc(100vh - 200px);
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    padding: 2rem 0;
}

.article-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 1.5rem;
    background: transparent;
    border: none;
    box-shadow: none;
    overflow: visible;
}

/* Article Header */
.article-header {
    background: transparent;
    color: var(--primary-color);
    padding: 1rem 2rem 0.5rem;
    position: relative;
    overflow: visible;
}

.article-title-row {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    gap: 2rem;
}

.article-title {
    margin: 0;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
    line-height: 1.2;
    flex: 1;
}

.article-meta-inline {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.25rem;
    flex-shrink: 0;
}

.article-date,
.article-views {
    font-size: 0.9rem;
    color: var(--text-secondary);
    white-space: nowrap;
}

.article-categories {
    margin-bottom: 1rem;
    position: relative;
    z-index: 10;
}

.category-tag {
    display: inline-block;
    background: var(--primary-color);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: var(--radius-md);
    font-size: 0.875rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    z-index: 10;
}

.category-tag:hover {
    background: var(--primary-dark);
    color: white;
    text-decoration: none;
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
}

.article-header::before {
    display: none;
}

.article-breadcrumb {
    position: relative;
    z-index: 1;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
    opacity: 0.9;
}

.article-breadcrumb a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.2s ease;
}

.article-breadcrumb a:hover {
    color: var(--primary-color);
}

.article-breadcrumb span {
    color: rgba(255, 255, 255, 0.7);
}


.article-meta {
    position: relative;
    z-index: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.5rem;
}

.article-author {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.author-avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: var(--shadow-md);
    border: 3px solid rgba(255, 255, 255, 0.2);
}

.author-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.avatar-placeholder {
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary-color);
    font-weight: 700;
    font-size: 1.5rem;
}

.author-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.author-name {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--primary-color);
}

.author-username {
    font-size: 0.9rem;
    color: var(--text-muted);
}

.article-stats {
    display: flex;
    gap: 1.5rem;
    align-items: center;
}

.stat-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    font-size: 0.95rem;
    font-weight: 500;
}

.stat-item i {
    font-size: 1rem;
    opacity: 0.8;
}

/* Article Content */
.article-content {
    padding: 1rem 2rem;
    background: transparent;
    border: none;
    margin: 0;
}

.article-body {
    max-width: none;
    line-height: 1.8;
    font-size: 1.1rem;
    color: var(--text-primary);
}

.article-body h1,
.article-body h2,
.article-body h3,
.article-body h4,
.article-body h5,
.article-body h6 {
    color: var(--text-primary);
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
}

.article-body h1 {
    font-size: 2rem;
    border-bottom: 2px solid var(--border-light);
    padding-bottom: 0.5rem;
}

.article-body h2 {
    font-size: 1.75rem;
    color: var(--primary-color);
}

.article-body h3 {
    font-size: 1.5rem;
}

.article-body h4 {
    font-size: 1.25rem;
}

.article-body p {
    margin-bottom: 1.5rem;
    color: var(--text-secondary);
}

.article-body strong {
    color: var(--text-primary);
    font-weight: 600;
}

.article-body em {
    color: var(--text-secondary);
    font-style: italic;
}

.article-body a {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
}

.article-body a:hover {
    color: var(--primary-dark);
    text-decoration: underline;
}

.article-body .wiki-link {
    background: none;
    color: var(--primary-color);
    padding: 0;
    border-radius: 0;
    font-weight: 600;
    font-size: 0.9rem;
    text-decoration: none;
    transition: all 0.2s ease;
    box-shadow: none;
}

.article-body .wiki-link:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
    text-decoration: none;
    color: var(--primary-color);
}

.article-body ul,
.article-body ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
}

.article-body li {
    margin-bottom: 0.5rem;
    color: var(--text-secondary);
}

.article-body blockquote {
    border-left: 4px solid var(--primary-color);
    background: var(--bg-secondary);
    padding: 1.5rem;
    margin: 2rem 0;
    border-radius: 0 var(--radius-lg) var(--radius-lg) 0;
    font-style: italic;
    color: var(--text-secondary);
}

.article-body code {
    background: var(--bg-tertiary);
    color: var(--primary-color);
    padding: 0.25rem 0.5rem;
    border-radius: var(--radius-sm);
    font-family: 'Courier New', monospace;
    font-size: 0.9rem;
    font-weight: 600;
}

.article-body pre {
    background: var(--bg-tertiary);
    padding: 1.5rem;
    border-radius: 0;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid var(--border-color);
}

.article-body pre code {
    background: none;
    padding: 0;
    color: var(--text-primary);
}

/* Related Articles */
.related-articles {
    background: var(--bg-secondary);
    padding: 2.5rem;
    border-top: 1px solid var(--border-light);
}

.related-articles h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.related-articles h3::before {
    content: '📚';
    font-size: 1.25rem;
}

.related-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
}

.related-item {
    background: var(--bg-primary);
    border-radius: 0;
    padding: 1.5rem;
    box-shadow: var(--shadow-md);
    border: 1px solid var(--border-light);
    transition: all 0.3s ease;
}

.related-item:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary-color);
}

.related-item h4 {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
    line-height: 1.3;
}

.related-item h4 a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
}

.related-item h4 a:hover {
    color: var(--primary-color);
}

.related-item p {
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 1rem;
}

.related-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.85rem;
    color: var(--text-muted);
    font-weight: 500;
}

/* Comments Section */
.comments-section {
    padding: 2.5rem;
    border-top: 1px solid var(--border-light);
    background: var(--bg-primary);
}

.comments-section h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.comments-section h3::before {
    content: '💬';
