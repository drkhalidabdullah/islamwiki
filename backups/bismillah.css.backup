        align-items: flex-start;
        gap: 0.75rem;
    }
    
    .article-title {
        font-size: 1.75rem;
    }
    
    .article-meta-inline {
        align-items: flex-start;
    }
    
    .article-content {
        padding: 1.5rem 1rem;
        background: transparent;
        margin: 0;
    }
    
    .related-articles,
    .comments-section {
        padding: 1rem;
    }
    
    .add-comment {
        padding: 1rem;
    }
