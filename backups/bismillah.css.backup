        align-items: flex-start;
        gap: 0.5rem;
    }
    
    .history-actions,
    .saved-search-actions {
        align-self: flex-end;
    }
    
    .notification {
        right: 10px;
        left: 10px;
        transform: translateY(-100%);
    }
    
    .notification.show {
        transform: translateY(0);
    }
}

/* Enhanced Search Features - Phase 2 */
