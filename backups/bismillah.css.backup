/* === public/assets/css/layout-consistency.css === */
/* Layout Consistency CSS - Ensures all pages use proper spacing and full-page layout */

/* ========================================
   GLOBAL LAYOUT CONSISTENCY
   ======================================== */

/* Ensure all pages have consistent full-page layout */
body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    background: #f9fafb;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    color: #1f2937;
}

/* Main content wrapper for all pages */
.page-wrapper {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

/* Header spacing */
.header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    height: 60px;
    background: #ffffff;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
    border-bottom: 1px solid #e5e7eb;
}

/* Main content area with proper spacing - accounting for sidebar */
.main-content {
    margin-top: 60px;
    margin-left: 60px;
    min-height: calc(100vh - 60px);
    padding: 0;
    background: #f9fafb;
    width: calc(100% - 60px);
}

/* Container for consistent max-width and spacing */
.container {
    width: 100%;
    margin: 0;
    padding: 0 1rem;
}

.container-wide {
    width: 100%;
    margin: 0;
    padding: 0 1.5rem;
}

/* ========================================
   PAGE-SPECIFIC LAYOUT CONSISTENCY
   ======================================== */

/* Homepage layout */
.homepage-container {
    min-height: calc(100vh - 140px);
    background: #f9fafb;
    padding: 2rem 0;
    width: 100%;
}

.homepage-layout {
    width: 100%;
    margin: 0;
    padding: 0 1.5rem;
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 2rem;
    align-items: start;
}

/* Search page layout */
.search-page-container {
    min-height: calc(100vh - 140px);
    background: #f9fafb;
    padding: 2rem 0;
    width: 100%;
}

.search-layout {
    width: 100%;
    margin: 0;
    padding: 0 1.5rem;
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 2rem;
    align-items: start;
}

/* Wiki page layout */
.wiki-page-container {
    min-height: calc(100vh - 140px);
    background: #f9fafb;
    padding: 2rem 0;
    width: 100%;
}

.wiki-layout {
    width: 100%;
    margin: 0;
    padding: 0 1rem;
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 2rem;
}

/* Article page layout */
.article-page {
    min-height: calc(100vh - 140px);
    background: #f9fafb;
    padding: 2rem 0;
    width: 100%;
}

.article-container {
    width: 100%;
    margin: 0;
    padding: 0 1.5rem;
}

/* ========================================
   CONTENT SECTIONS CONSISTENCY
   ======================================== */

/* Main content sections */
.content-section {
    background: #ffffff;
    border-radius: 0.75rem;
    padding: 2rem;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
    border: 1px solid #e5e7eb;
    margin-bottom: 2rem;
}

.content-section:last-child {
    margin-bottom: 0;
}

/* Sidebar sections */
.sidebar-section {
    background: #ffffff;
    border-radius: 0.75rem;
    padding: 1.5rem;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
    border: 1px solid #e5e7eb;
    margin-bottom: 1.5rem;
}

.sidebar-section:last-child {
    margin-bottom: 0;
}

/* ========================================
   SPACING CONSISTENCY
   ======================================== */

/* Consistent spacing system */
.spacing-xs { margin: 0.25rem; }
.spacing-sm { margin: 0.5rem; }
.spacing-md { margin: 1rem; }
.spacing-lg { margin: 1.5rem; }
.spacing-xl { margin: 2rem; }
.spacing-2xl { margin: 3rem; }

.padding-xs { padding: 0.25rem; }
.padding-sm { padding: 0.5rem; }
.padding-md { padding: 1rem; }
.padding-lg { padding: 1.5rem; }
.padding-xl { padding: 2rem; }
.padding-2xl { padding: 3rem; }

/* ========================================
   CARD LAYOUT CONSISTENCY
   ======================================== */

/* Card components with consistent spacing */
.card {
    background: #ffffff;
    border-radius: 0.75rem;
    padding: 1.5rem;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
    border: 1px solid #e5e7eb;
    margin-bottom: 1rem;
    transition: all 0.2s ease;
}

.card:hover {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transform: translateY(-1px);
}

.card-header {
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #f3f4f6;
}

.card-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
    margin: 0;
}

.card-content {
    color: #6b7280;
    line-height: 1.6;
}

/* ========================================
   GRID LAYOUT CONSISTENCY
   ======================================== */

/* Grid layouts for consistent spacing */
.grid-2 {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
}

.grid-3 {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
}

.grid-4 {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
}

.grid-auto {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
}

/* ========================================
   RESPONSIVE LAYOUT CONSISTENCY
   ======================================== */

/* Mobile-first responsive design */
@media (max-width: 1024px) {
    .main-content {
        margin-left: 60px;
        width: calc(100% - 60px);
    }
    
    .homepage-layout,
    .search-layout,
    .wiki-layout {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .sidebar-section {
        order: 2;
    }
    
    .content-section {
        order: 1;
    }
}

@media (max-width: 768px) {
    .main-content {
        margin-left: 50px;
        width: calc(100% - 50px);
        padding: 1rem 0;
    }
    
    .container,
    .container-wide {
        padding: 0 1rem;
    }
    
    .homepage-container,
    .search-page-container,
    .wiki-page-container,
    .article-page {
        padding: 1rem 0;
    }
    
    .content-section {
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }
    
    .sidebar-section {
        padding: 1rem;
        margin-bottom: 1rem;
    }
    
    .grid-2,
    .grid-3,
    .grid-4 {
        grid-template-columns: 1fr;
        gap: 1rem;
    }
    
    .grid-auto {
        grid-template-columns: 1fr;
        gap: 1rem;
    }
}

@media (max-width: 480px) {
    .main-content {
        margin-left: 45px;
        width: calc(100% - 45px);
    }
    
    .container,
    .container-wide {
        padding: 0 0.5rem;
    }
    
    .content-section {
        padding: 1rem;
        margin-bottom: 1rem;
    }
    
    .sidebar-section {
        padding: 0.75rem;
        margin-bottom: 0.75rem;
    }
    
    .card {
        padding: 1rem;
        margin-bottom: 0.75rem;
    }
}

