    .article-meta {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }
    
    .article-stats {
        flex-wrap: wrap;
        gap: 1rem;
    }
    
    .article-content {
        padding: 2rem 1.5rem;
        background: transparent;
        margin: 0;
    }
    
    .article-body {
        font-size: 1rem;
    }
    
    .related-articles,
    .comments-section {
        padding: 1.5rem;
    }
    
    .related-list {
        grid-template-columns: 1fr;
    }
    
    .add-comment {
