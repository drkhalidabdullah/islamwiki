RewriteEngine On

# Pretty URLs for wiki articles
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([A-Za-z0-9_-]+)/?$ article.php?slug=$1 [QSA,L]

# Handle capitalized article names
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([A-Z][A-Za-z0-9_-]*)/?$ article.php?slug=$1 [QSA,L]
