// Get recent articles with proper permissions
$recent_query = build_article_query("
    SELECT wa.*, u.username, u.display_name 
    FROM wiki_articles wa 
    JOIN users u ON wa.author_id = u.id
", [], []);
$recent_query['query'] .= " ORDER BY wa.published_at DESC LIMIT 6";

$stmt = $pdo->prepare($recent_query['query']);
$stmt->execute($recent_query['params']);
$recent_articles = $stmt->fetchAll();

