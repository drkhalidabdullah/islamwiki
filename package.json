  },
  "homepage": "https://github.com/drkhalidabdullah/islamwiki#readme",
  "bugs": {
    "url": "https://github.com/drkhalidabdullah/islamwiki/issues"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "clsx": "^2.1.1",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.542.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "^6.8.1",
