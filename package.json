  "description": "A comprehensive Islamic knowledge platform built for shared hosting with enterprise-grade features",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:safe": "npm run build && npm run copy-public-files",
